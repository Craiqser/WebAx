@inherits LayoutComponentBase
<div>
	@Body
</div>
<style>
	body {
		height: 100vh;
		margin: 0;
		position: relative;
		background-color: #EBECF0;
		font-family: "Segoe UI", Roboto, Ubuntu, "Helvetica Neue", Arial, sans-serif;
		font-weight: 600;
	}

	body, p, input, select, textarea, button {
		font-size: 16px;
	}

	h1 {
		font-size: 24px;
	}

	form {
		padding: 32px;
		width: 320px;
		margin: 0 auto;
	}

	div, p {
		color: #BABECC;
		text-shadow: 1px 1px 1px #FFF;
	}

	.segment {
		padding: 32px 0 0 16px;
		text-align: center;
	}

	button, input {
		padding: 16px;
		border: 0;
		outline: 0;
		font-size: 16px;
		background-color: #EBECF0;
		border-radius: 32px;
		text-shadow: 1px 1px 0 #FFF;
	}

	button {
		cursor: pointer;
		color: #61677C;
		font-weight: bold;
		box-shadow: -5px -5px 20px #FFF, 5px 5px 20px #BABECC;
		transition: all 0.2s ease-in-out;
	}

		button:hover {
			box-shadow: -2px -2px 5px #FFF, 2px 2px 5px #BABECC;
		}

		button:active {
			box-shadow: inset 1px 1px 2px #BABECC, inset -1px -1px 2px #FFF;
		}

		button.signin {
			display: block;
			width: 100%;
		}

			button.signin div {
				display: flex;
				align-items: center;
				justify-content: flex-start;
				color: #A00000;
			}

				button.signin div span {
					flex-grow: 1;
					padding-right: 16px;
				}

	label {
		display: block;
		margin-bottom: 24px;
		width: 100%;
	}

	input {
		margin-right: 8px;
		box-shadow: inset 2px 2px 5px #BABECC, inset -5px -5px 10px #FFF;
		width: 100%;
		box-sizing: border-box;
		transition: all 0.2s ease-in-out;
		-webkit-appearance: none;
	}

		input:focus {
			box-shadow: inset 1px 1px 2px #BABECC, inset -1px -1px 2px #FFF;
		}

	.block_center {
		position: absolute;
		bottom: 0;
		height: 420px;
		left: 0;
		right: 0;
		top: 0;
		width: 400px;
		margin: auto;
		background-color: #EEE;
		border-radius: 32px;
		box-shadow: -5px -5px 20px #FFF, 5px 5px 20px #BABECC;
	}

	.invalid {
		box-shadow: inset 0 0 0 2px darkred;
	}

	.link {
		color: dodgerblue;
	}

	.plink {
		margin-top: 50px;
		font-size: 12px;
		text-align: center;
	}

	.valid.modified:not([type=checkbox]) {
		box-shadow: inset 0 0 0 2px dodgerblue;
	}

	.validation-message {
		padding: 0 16px;
		color: darkred;
		text-align: center;
	}
</style>
