@page "/Account/Register"
@layout EmptyLayout
@inherits RegisterPage
<Toast Message="User:Auth:Register" />
<div class="card-wrapper" style="font-size: 14px;">
	<div class="card border-secondary bg-light m-auto" style="width: 450px;">
		<h5 class="card-header">User.Auth.Register</h5>
		<div class="card-body">
			<EditForm Model="RegisterModel" OnValidSubmit="HandleRegistrationAsync">
				<DataAnnotationsValidator />
				<div class="form-group">
					<label for="username">User.Auth.Login</label>
					<div class="input-group mb-3">
						<InputText id="username" class="form-control" @bind-Value="RegisterModel.Login" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-person"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => RegisterModel.Login)" />
					<label for="email">User.Auth.EmailAddress</label>
					<div class="input-group mb-3">
						<InputText id="email" class="form-control" @bind-Value="RegisterModel.Email" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-envelope-closed"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => RegisterModel.Email)" />
				</div>
				<div class="form-group">
					<label for="password">User.Auth.Password</label>
					<div class="input-group mb-3">
						<InputText id="password" type="password" class="form-control" @bind-Value="RegisterModel.Password" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-key"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => RegisterModel.Password)" />
				</div>
				<div class="form-group">
					<label for="password">User.Auth.PasswordConfirmation</label>
					<div class="input-group mb-3">
						<InputText id="confirmpassword" type="password" class="form-control" @bind-Value="RegisterModel.PasswordConfirm" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-key"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => RegisterModel.PasswordConfirm)" />
				</div>
				<div class="input-group-append">
					<button type="submit" class="btn btn-primary">User.Auth.Register</button>
					<NavLink class="nav-link" href="/Account/Login">User.Auth.SignIn</NavLink>
				</div>
			</EditForm>
		</div>
		@if (Error != null && Error.Length > 0)
		{
			<div class="alert alert-danger mx-4" role="alert">@Error</div>
		}
	</div>
</div>
