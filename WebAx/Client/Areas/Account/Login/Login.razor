@page "/Account/Login"
@layout EmptyLayout
@inherits LoginPage
<Toast Message="User.Auth.AppLogin" />
<div class="card-wrapper" style="font-size: 14px;">
	<div class="card border-secondary bg-light m-auto" style="width: 450px;">
		<h5 class="card-header">User.Auth.AppLogin</h5>
		<div class="card-body">
			<EditForm Model="LoginRequest" OnValidSubmit="@HandleLoginAsync">
				<DataAnnotationsValidator />
				<div class="form-group">
					<label for="username">User.Auth.Login</label>
					<div class="input-group mb-3">
						<InputText id="username" class="form-control" @bind-Value="LoginRequest.Login" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-person"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => LoginRequest.Login)" />
				</div>
				<div class="form-group">
					<label for="password">User.Auth.Password</label>
					<div class="input-group mb-3">
						<InputText id="password" type="password" class="form-control" @bind-Value="LoginRequest.Password" />
						<div class="input-group-append">
							<div class="input-group-text">
								<span class="oi oi-key"></span>
							</div>
						</div>
					</div>
					<ValidationMessage For="@(() => LoginRequest.Password)" />
				</div>
				<div class="input-group-append">
					<button type="submit" class="btn btn-primary">User.Auth.SignIn</button>
					<NavLink class="nav-link" href="/Account/Register">User.Auth.Register</NavLink>
				</div>
			</EditForm>
		</div>
		@if (Error != null && Error.Length > 0)
		{
			<div class="alert alert-danger mx-auto" role="alert">@Error</div>
		}
	</div>
</div>
